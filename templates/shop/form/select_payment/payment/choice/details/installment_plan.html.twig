{% set plan_data = hookable_metadata.context.plan_data %}

{% set installmentsCount = plan_data.installmentsCount %}
{% set plans = plan_data.plans %}
{% set creditInfo = plan_data.creditInfo %}
{% set selectedMethodCode = hookable_metadata.context.form.parent.vars.value|default('') %}
{% set currentMethodCode = hookable_metadata.context.form.vars.value|default('') %}

{% if currentMethodCode and currentMethodCode == selectedMethodCode %}
    <div class="alma-installment-plan">
        {% if installmentsCount <= 4 %}
            {{ include('@AlmaSyliusPaymentPlugin/shop/partials/alma_pnx.html.twig') }}
        {% else %}
            {{ include('@AlmaSyliusPaymentPlugin/shop/partials/alma_credit.html.twig') }}
        {% endif %}
    </div>
{% endif %}
